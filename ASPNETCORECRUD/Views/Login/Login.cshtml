@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

<hr />

<form method="post">
    <div class="form-group row">
        <div class="col-md-1">
            <label asp-for="Name">Name</label>
        </div>
        <div class="col-md-3">
            <input class="form-control" asp-for="Name" />
            <span class="text-danger">@ViewBag.UserError</span>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-1">
            <label asp-for="Password">Password</label>
        </div>
        <div class="col-md-3">
            <input class="form-control" type="password" asp-for="Password" />
            <span class="text-danger">@ViewBag.PasswordError</span>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group d-flex">
        <input type="submit" value="Login" class="btn btn-outline-success w-10 mx-2" /> |
        <a asp-controller="User" asp-action="AddUser" class="mx-2">Register</a>
    </div>
</form>

@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}